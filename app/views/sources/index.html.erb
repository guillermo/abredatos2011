<div id="head" class="slides">
  <%= slides_for(@highlighted_sources.all, 'highlighted_source' ) %>
</div> <!-- #slider -->

<div id="left">
  <h2>Listado de Fuentes de datos</h2>
  <ul class="app_list">
    <%= render @sources.all %>
  </ul>

</div> <!-- #apps -->

<div id="right">
  <% form_for @sources,  :html => {:id => "main_search"} do |f|%>
  <fieldset>
    <label>
      <strong>Buscar</strong>
        <%= f.text_field :title_or_description_contains, :id => "search" %>
        <button type="submit"> <span>Buscar</span> </button>
      </label>
    </fieldset>
    
  <% end %>
  <%= render 'categories/categories' %>

</div> <!-- #sidebar -->
